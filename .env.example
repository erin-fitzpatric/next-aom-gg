# MongoDB Configuration
# These values are used by the MongoDB container in docker-compose.yml
MONGO_USER=root
MONGO_PASSWORD=example_password

# MinIO Configuration (S3 compatible storage for local development)
# These values are used by the MinIO container in docker-compose.yml
MINIO_ROOT_USER=minio_user
MINIO_ROOT_PASSWORD=minio_password

# AWS Configuration
# For local development, these should match MINIO_ROOT_USER and MINIO_ROOT_PASSWORD
# For production, replace with your actual AWS credentials
AWS_ACCESS_KEY_ID=minio_user
AWS_SECRET_ACCESS_KEY=minio_password

# AWS Region
# For local development, this can be any valid AWS region (e.g., us-east-1)
# For production, use the region where your S3 bucket is located
AWS_REGION=us-east-1

# S3 Bucket Name
# This should be the name of your S3 bucket for storing recorded games
# For local development, this bucket will be created in MinIO
# For production, make sure this bucket exists in your AWS account
NEXT_PUBLIC_S3_REC_BUCKET_NAME=your-bucket-name

# Redis Configuration
# If you add a Redis service to docker-compose.yml, set these values accordingly
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# NextAuth Configuration
# Generate a random string for the secret (e.g., using `openssl rand -base64 32`)
NEXTAUTH_SECRET=your_nextauth_secret
NEXTAUTH_URL=http://localhost:3000

# Steam Authentication (if using Steam login)
AUTH_STEAM_KEY=your_steam_api_key

# Xbox Live Authentication (if using Xbox login)
XBOX_CLIENT_ID=your_xbox_client_id
XBOX_CLIENT_SECRET=your_xbox_client_secret

# YouTube API Configuration (for fetching YouTube videos)
YOUTUBE_API_KEY=your_youtube_api_key

# Reddit API Configuration (for fetching Reddit posts)
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_SECRET=your_reddit_secret
USER_AGENT=your_reddit_user_agent

# Base URL for your application
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Google Adsense ID (if using Google Adsense)
NEXT_PUBLIC_GOOGLE_ADSENSE_ID=your_google_adsense_id

# Node Environment
# Use 'development' for local development, 'production' for production deployment
NODE_ENV=development